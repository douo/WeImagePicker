<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="info.dourok.weimagepicker.ImagePickerActivity"
        tools:showIn="@layout/weimagepicker__activity_image_picker">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/weimagepicker__preview_bottom_bg"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:padding="4dp"
            android:src="@drawable/weimagepicker__check_box_white_24dp" />

        <TextView
            android:id="@+id/selector_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/weimagepicker__action_select"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>